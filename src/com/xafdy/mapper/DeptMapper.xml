<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xafdy.dao.DeptMapper">
  <resultMap id="BaseResultMap" type="com.xafdy.model.Dept">
    
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="number" jdbcType="VARCHAR" property="number" />
  </resultMap>
  
  <insert id="saveEntity" parameterType="com.xafdy.model.Dept">
    insert into dept (name, number
      )
    values (#{name,jdbcType=VARCHAR}, #{number,jdbcType=VARCHAR}
      )
  </insert>
  
    <select id="searchEntity" resultMap="BaseResultMap">
  	SELECT id, name, number FROM dept
  </select>
  
  <select id="getEntityById" parameterType="int" resultMap="BaseResultMap">
  	SELECT id, name, number FROM dept WHERE id = #{id}
  </select>

  <delete id="deleteEntity" parameterType="int">
  	DELETE FROM dept WHERE id = #{id}
  </delete>
  
<update id="updateEntity" parameterType="com.xafdy.model.Dept">
    update dept set 
      name = #{name}
      where id = #{id}
  </update>
  
</mapper>